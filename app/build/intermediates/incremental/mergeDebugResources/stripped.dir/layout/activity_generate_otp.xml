<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.OtpVerification.GenerateOtp">

    <RelativeLayout
        android:id="@+id/line1"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:contentDescription="@string/app_name"
            android:padding="8dp"
            android:src="@drawable/otp" />

        <LinearLayout
            android:layout_below="@id/image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/otp_verification"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:layout_marginHorizontal="8dp"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/please_enter_your_mobile_number"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconTint="@color/purple_500"
                android:layout_marginTop="20dp"
                app:endIconDrawable="@drawable/ic_baseline_person_add_alt_1_24"
                android:hint="@string/userName"
                android:background="@drawable/box"
                android:layout_marginHorizontal="5dp"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:inputType="textPersonName"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconTint="@color/purple_500"
                android:layout_marginTop="10dp"
                app:endIconDrawable="@drawable/ic_baseline_attach_email_24"
                android:hint="@string/email"
                android:background="@drawable/box"
                android:layout_marginHorizontal="5dp"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/email_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="custom"
                app:endIconTint="@color/purple_500"
                android:layout_marginTop="10dp"
                app:endIconDrawable="@drawable/ic_baseline_phonelink_setup_24"
                app:helperTextEnabled="true"
                app:helperText="1234567890"
                app:counterEnabled="true"
                app:counterMaxLength="10"
                android:hint="@string/mobile_no"
                android:background="@drawable/box"
                android:layout_marginHorizontal="5dp"
                android:padding="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:inputType="number"
                    android:textColor="@color/black"/>

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/get_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/purple_500"
            android:padding="12dp"
            android:text="@string/get_otp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/line2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/verifyImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/verify"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15sp"
            android:contentDescription="@string/todo"/>

        <LinearLayout
            android:layout_below="@id/verifyImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:text="@string/otp_verification"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/please_enter_the_otp_sent_to_you"/>

            <TextView
                android:id="@+id/receive_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textSize="15sp"
                android:text="@string/_91_123456789"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15sp"
                android:layout_marginTop="50sp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/otp_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:inputType="numberPassword"
                    android:hint="@string/_1"
                    android:gravity="center"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:importantForAutofill="no"
                    android:maxLength="1"/>

                <EditText
                    android:id="@+id/otp_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:inputType="numberPassword"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_marginStart="8sp"
                    android:hint="@string/_1"
                    android:maxLength="1"
                    android:layout_weight="1"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/otp_third"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:layout_marginStart="8sp"
                    android:padding="8dp"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:layout_weight="1"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/otp_fourth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:inputType="numberPassword"
                    android:maxLength="1"
                    android:padding="8dp"
                    android:layout_marginStart="8sp"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:layout_weight="1"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/otp_fifth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:inputType="numberPassword"
                    android:padding="8dp"
                    android:maxLength="1"
                    android:layout_marginStart="8sp"
                    android:gravity="center"
                    android:hint="@string/_1"
                    android:layout_weight="1"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/otp_sixth"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/box"
                    android:inputType="numberPassword"
                    android:padding="8dp"
                    android:hint="@string/_1"
                    android:maxLength="1"
                    android:layout_weight="1"
                    android:layout_marginStart="8sp"
                    android:gravity="center"
                    android:importantForAutofill="no" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/didn_t_receive_otp"/>

                <TextView
                    android:id="@+id/resend_otp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/black"
                    android:text="@string/resend_otp_again"/>

            </LinearLayout>

        </LinearLayout>

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/verify_otp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/purple_500"
            android:padding="12dp"
            android:text="Verify Otp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>