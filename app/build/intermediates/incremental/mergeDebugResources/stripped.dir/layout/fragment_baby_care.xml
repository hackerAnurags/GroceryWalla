<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminPanel.ui.BabyCare">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/p_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:background="#B6F4FB"
            android:src="@drawable/fourth_slider"
            tools:ignore="ContentDescription" />

        <com.skydoves.elasticviews.ElasticButton
            android:id="@+id/pickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/p_image"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/continue_button"
            android:padding="8dp"
            android:layout_centerHorizontal="true"
            android:text="Pick Image"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <androidx.core.widget.NestedScrollView
            android:layout_below="@id/pickImage"
            android:layout_above="@id/footerCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="7dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/pure_color"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="Product basic details"/>

                <EditText
                    android:id="@+id/p_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Name"
                    android:layout_marginTop="4dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:layout_marginHorizontal="5dp"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_index"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Index (Order by possition)"
                    android:layout_marginHorizontal="5dp"
                    android:ems="25"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Rating"
                    android:layout_marginHorizontal="5dp"
                    android:ems="25"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Price"
                    android:layout_marginHorizontal="5dp"
                    android:ems="25"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/cutted_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Cutted Price"
                    android:layout_marginHorizontal="5dp"
                    android:ems="25"
                    android:inputType="numberDecimal"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_offer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Offer"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Units"
                    android:layout_marginHorizontal="5dp"
                    android:ems="25"
                    android:inputType="text"
                    android:importantForAutofill="no" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/pure_color"
                    android:textSize="20sp"
                    android:layout_marginVertical="7dp"
                    android:textStyle="bold"
                    android:text="Product more information"/>

                <EditText
                    android:id="@+id/p_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Product Description"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:layout_marginTop="4dp"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/key_features"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Key Features"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Ingredients (Category)"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_nutrition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nutrition Information"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_life"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Shelf Life"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_manufacture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Manufacture details"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_markedUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Marked by"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_disclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Disclaimer"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_country"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Country/Origin"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="text"
                    android:gravity="start"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_customer_care"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Customer care details"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="text"
                    android:gravity="start"
                    android:importantForAutofill="no" />

                <EditText
                    android:id="@+id/p_seller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Seller"
                    android:layout_marginHorizontal="5dp"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:gravity="start"
                    android:maxLines="20"
                    android:importantForAutofill="no" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <androidx.cardview.widget.CardView
            android:id="@+id/footerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:cardBackgroundColor="@color/teal_700"
            app:cardMaxElevation="15sp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp"
            android:elevation="10dp"
            app:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.skydoves.elasticviews.ElasticButton
                    android:id="@+id/saveData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload Data"
                    android:layout_marginTop="7dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/continue_button"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:id="@+id/clickNext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text=">>>"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textSize="15sp"
                        android:textColor="@color/purple_500"
                        android:textStyle="bold"
                        android:text="Click to next"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/white"
                        android:text=">>>"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</FrameLayout>